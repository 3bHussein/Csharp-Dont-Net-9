@model GarageServiceApp.Models.ServiceReceived

@{
    ViewData["Title"] = "Edit";
}
@section styles {
    <link href="~/lib/custome-cropper/cropper.min.css" rel="stylesheet" />
}
<h1>Edit</h1>

<h4>ServiceReceived</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarModel" class="control-label"></label>
                <input asp-for="CarModel" class="form-control" />
                <span asp-validation-for="CarModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LicensePlate" class="control-label"></label>
                <input asp-for="LicensePlate" class="form-control" />
                <span asp-validation-for="LicensePlate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VIN" class="control-label"></label>
                <input asp-for="VIN" class="form-control" />
                <span asp-validation-for="VIN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StateBeforeRepair" class="control-label"></label>
                <input asp-for="StateBeforeRepair" class="form-control" />
                <span asp-validation-for="StateBeforeRepair" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerComplaint" class="control-label"></label>
                <input asp-for="CustomerComplaint" class="form-control" />
                <span asp-validation-for="CustomerComplaint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InitialDiagnosis" class="control-label"></label>
                <input asp-for="InitialDiagnosis" class="form-control" />
                <span asp-validation-for="InitialDiagnosis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstimatedCost" class="control-label"></label>
                <input asp-for="EstimatedCost" class="form-control" />
                <span asp-validation-for="EstimatedCost" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>PhotoBefore</label>
                <br />
                <input type="file" id="file" />
                <img id="image-src" style="width:50px;height:50px">
                <input type="hidden" id="PhotoAfter" name="PhotoAfter"  />
                <img src="~/images/@Model.PhotoAfter" style="width:50px;height:50px" />

            </div>
            <div class="form-group">
                <label asp-for="ReceivedDate" class="control-label"></label>
                <input asp-for="ReceivedDate" class="form-control" />
                <span asp-validation-for="ReceivedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TechnicianName" class="control-label"></label>
                <input asp-for="TechnicianName" class="form-control" />
                <span asp-validation-for="TechnicianName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


<div class="modal fade" id="modal-default" tabindex="-1" role="dialog" aria-labelledby="modal-default" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-default-title">Crop Image</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="img-container">
                            <img src="" class="img-fluid" id="image-modal-cropper">

                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="crop">Crop</button>
            </div>
        </div>

    </div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/custome-cropper/cropper.min.js"></script>
    <script src="~/lib/custome-cropper/jquery-cropper.min.js"></script>
    <script src="~/lib/custome-cropper/custome-cropper.js"></script>

    <script>
        $("form").on("submit", () => {
            $("#PhotoAfter").val($("#image-src").attr("src"));
        
         

        });

            customimageCropper({
              fileSelector: "#file",
              modelImageSelector: "#image-modal-cropper",
              sourceImageSelector: "#image-src",
              submitSelector: "#crop",
              aspectRatio: 1 / 1,
              minContainerWidth: 500,
              minContainerHeight: 500,
              maxCropBoxWidth: 250,
              maxCropBoxHeight: 250
          });
    </script>

}
