@model GarageServiceApp.Models.ServiceReceived

@{
    ViewData["Title"] = "Create ServiceReceived";
}
@section styles {
    <link href="~/lib/custome-cropper/cropper.min.css" rel="stylesheet" />
}
<h1 class="mb-4">Create Service Received</h1>

<div class="container">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="row g-3">

            <!-- CustomerId with + button -->
            <div class="col-md-6">
                <label asp-for="CustomerId" class="form-label"></label>
                <div class="input-group">
                    <select asp-for="CustomerId" class="form-select" asp-items="ViewBag.CustomerId"></select>
                    <a class="btn btn-outline-secondary" href="@Url.Action("Create", "Customers")" title="Add new customer" target="_blank" style="min-width: 40px;">
                        +
                    </a>
                </div>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>PhotoAfter</label>
                <br />
                <input type="file" id="file" />
                <img id="image-src" style="width:50px;height:50px">
                <input type="hidden" asp-for="PhotoAfter" />

            </div>

            <div class="col-md-6">
                <label asp-for="CarModel" class="form-label"></label>
                <input asp-for="CarModel" class="form-control" />
                <span asp-validation-for="CarModel" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="LicensePlate" class="form-label"></label>
                <input asp-for="LicensePlate" class="form-control" />
                <span asp-validation-for="LicensePlate" class="text-danger"></span>
            </div>



            <div class="col-md-6">
                <label asp-for="VIN" class="form-label"></label>
                <input asp-for="VIN" class="form-control" />
                <span asp-validation-for="VIN" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="StateBeforeRepair" class="form-label"></label>
                <input asp-for="StateBeforeRepair" class="form-control" />
                <span asp-validation-for="StateBeforeRepair" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="CustomerComplaint" class="form-label"></label>
                <textarea asp-for="CustomerComplaint" class="form-control" rows="3"></textarea>
                <span asp-validation-for="CustomerComplaint" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="InitialDiagnosis" class="form-label"></label>
                <textarea asp-for="InitialDiagnosis" class="form-control" rows="3"></textarea>
                <span asp-validation-for="InitialDiagnosis" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="EstimatedCost" class="form-label"></label>
                <input asp-for="EstimatedCost" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="EstimatedCost" class="text-danger"></span>
            </div>

            @{
                var now = DateTime.Now.ToString("yyyy-MM-ddTHH:mm");
            }
            <div class="col-md-6">
                <label asp-for="ReceivedDate" class="form-label"></label>
                @* <input asp-for="ReceivedDate" class="form-control" type="date" value="@now"/> *@
                <input asp-for="ReceivedDate" type="datetime-local" class="form-control" value="@now" />

                <span asp-validation-for="ReceivedDate" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Notes" class="form-label"></label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="TechnicianName" class="form-label"></label>
                <input asp-for="TechnicianName" class="form-control" />
                <span asp-validation-for="TechnicianName" class="text-danger"></span>
            </div>

            <div class="col-12 d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>

        </div>
    </form>
</div>

<div class="modal fade" id="modal-default" tabindex="-1" role="dialog" aria-labelledby="modal-default" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-default-title">Crop Image</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="img-container">
                            <img src="" class="img-fluid" id="image-modal-cropper">

                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="crop">Crop</button>
            </div>
        </div>

    </div>

</div>

@section Scripts {
            await Html.RenderPartialAsync("_ValidationScriptsPartial");

    <script src="~/lib/custome-cropper/cropper.min.js"></script>
    <script src="~/lib/custome-cropper/jquery-cropper.min.js"></script>
    <script src="~/lib/custome-cropper/custome-cropper.js"></script>

    <script>
     
        $("form").on("submit", () => {
              $("#PhotoAfter").val($("#image-src").attr("src"));
              debugger;
              if ($("#PhotoAfter").val() === null || $("#PhotoAfter").val() === undefined || $("#PhotoAfter").val().trim() === "") {
                  swal("Please Add Photo", "", "error");
                  return false;
              }

          });

              customimageCropper({
                fileSelector: "#file",
                modelImageSelector: "#image-modal-cropper",
                sourceImageSelector: "#image-src",
                submitSelector: "#crop",
                aspectRatio: 1 / 1,
                minContainerWidth: 500,
                minContainerHeight: 500,
                maxCropBoxWidth: 250,
                maxCropBoxHeight: 250
            });
    </script>


}
