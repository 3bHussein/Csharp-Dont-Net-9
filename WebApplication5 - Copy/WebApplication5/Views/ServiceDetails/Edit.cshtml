@model GarageServiceApp.Models.ServiceDetail

@{
    ViewData["Title"] = "Edit";
}
@section styles {
    <link href="~/lib/custome-cropper/cropper.min.css" rel="stylesheet" />
}
<h1>Edit</h1>

<h4>ServiceDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="currentForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ServiceReceivedId" class="control-label"></label>
                <select asp-for="ServiceReceivedId" class="form-control" asp-items="ViewBag.ServiceReceivedId"></select>
                <span asp-validation-for="ServiceReceivedId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceName" class="control-label"></label>
                <input asp-for="ServiceName" class="form-control" />
                <span asp-validation-for="ServiceName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>PhotoBefore</label>
                <br />
                <input type="file" id="file" />
                <img id="image-src" style="width:50px;height:50px">
                <input type="hidden" id="PhotoBefore" name="PhotoBefore" value="" />
                <img src="~/images/@Model.PhotoBefore" style="width:50px;height:50px" />
              
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalPrice" class="control-label"></label>
                <input asp-for="TotalPrice" class="form-control" />
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActualHours" class="control-label"></label>
                <input asp-for="ActualHours" class="form-control" />
                <span asp-validation-for="ActualHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartedDate" class="control-label"></label>
                <input asp-for="StartedDate" class="form-control" />
                <span asp-validation-for="StartedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompletedDate" class="control-label"></label>
                <input asp-for="CompletedDate" class="form-control" />
                <span asp-validation-for="CompletedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TechnicianName" class="control-label"></label>
                <input asp-for="TechnicianName" class="form-control" />
                <span asp-validation-for="TechnicianName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkNotes" class="control-label"></label>
                <input asp-for="WorkNotes" class="form-control" />
                <span asp-validation-for="WorkNotes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<div class="modal fade" id="modal-default" tabindex="-1" role="dialog" aria-labelledby="modal-default" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-default-title">Crop Image</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="img-container">
                            <img src="" class="img-fluid" id="image-modal-cropper">

                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="crop">Crop</button>
            </div>
        </div>

    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/lib/custome-cropper/cropper.min.js"></script>
    <script src="~/lib/custome-cropper/jquery-cropper.min.js"></script>
    <script src="~/lib/custome-cropper/custome-cropper.js"></script>

    <script>

        $("#currentForm").on("submit", () => {
              $("#PhotoBefore").val($("#image-src").attr("src"));
              debugger;
              if ($("#PhotoBefore").val() === null || $("#PhotoBefore").val() === undefined || $("#PhotoBefore").val().trim() === "") {
                  swal("Please Add Photo", "", "error");
                  return false;
              }

          });

              customimageCropper({
                fileSelector: "#file",
                modelImageSelector: "#image-modal-cropper",
                sourceImageSelector: "#image-src",
                submitSelector: "#crop",
                aspectRatio: 1 / 1,
                minContainerWidth: 500,
                minContainerHeight: 500,
                maxCropBoxWidth: 250,
                maxCropBoxHeight: 250
            });
    </script>

}
